    <script>
       // Fonctions globales pour les modales
function openModal(modalId) {
    const modal = document.getElementById(modalId);
    if (modal) {
        modal.style.right = '0';
        modal.classList.add('active');
        document.body.style.overflow = 'hidden';
    }
}

function closeModal(modalId) {
    const modal = document.getElementById(modalId);
    if (modal) {
        modal.style.right = '-100%';
        modal.classList.remove('active');
        document.body.style.overflow = 'auto';
    }
}

document.addEventListener('DOMContentLoaded', function() {
    const loader = document.getElementById('loader');
    let backupTimeout;
    
    const mainImages = Array.from(document.querySelectorAll('.projetContent img, .laptop-wrapper img'));
    
    let imagesToLoad = mainImages.length;
    
    function hideLoader() {
        if (backupTimeout) {
            clearTimeout(backupTimeout);
        }
        loader.style.opacity = '0';
        loader.style.visibility = 'hidden';
        document.querySelector('.containerI').style.opacity = '1';
        initModals();
    }

    if(imagesToLoad === 0) {
        hideLoader();
        return;
    }
    
    function imageLoaded() {
        imagesToLoad--;
        if(imagesToLoad <= 0) {
            hideLoader();
        }
    }
    
    mainImages.forEach(img => {
        if(img.complete && img.naturalWidth > 0) {
            imageLoaded();
        } else {
            img.addEventListener('load', imageLoaded);
            img.addEventListener('error', imageLoaded);
        }
    });
    
    // Timeout de secours (5 secondes max)
    backupTimeout = setTimeout(hideLoader, 5000);
    
    function initModals() {
        // Gestion simplifiée des modales
        document.addEventListener('click', function(e) {
            // Ouverture modale
            if (e.target.closest('.projetContent1')) {
                const modalClass = e.target.closest('.projetContent1').classList[1];
                if (modalClass) {
                    openModal(modalClass);
                }
            }
            
            // Fermeture modale
            if (e.target.closest('.close')) {
                const modalClass = e.target.closest('.close').classList[1];
                if (modalClass) {
                    closeModal(modalClass);
                }
            }
        });
    }
});
