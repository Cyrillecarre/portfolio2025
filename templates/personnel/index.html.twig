<script>
    document.addEventListener('DOMContentLoaded', function() {
    const paragraphs = document.querySelectorAll('.textPropos2 p');
    let currentParagraph = 0; // Index du paragraphe en cours d'affichage

    function typeText(paragraph, speed) {
        const text = paragraph.innerHTML; // Le texte √† afficher
        paragraph.innerHTML = ''; // On vide le contenu
        paragraph.style.opacity = '1'; // On rend visible le paragraphe
        let charIndex = 0;

        const typing = setInterval(function() {
            if (charIndex < text.length) {
                paragraph.innerHTML += text[charIndex]; // Ajoute une lettre
                charIndex++;
            } else {
                clearInterval(typing); // Stoppe l'intervalle quand tout le texte est affich√©
                currentParagraph++;
                if (currentParagraph < paragraphs.length) {
                    setTimeout(() => typeText(paragraphs[currentParagraph], speed), 200);
                }
            }
        }, speed);
    }
    typeText(paragraphs[currentParagraph], 40);
});
</script>
<script>
document.addEventListener('DOMContentLoaded', function() {
    const textProposElements = document.querySelectorAll('.textPropos');

    function isInViewport(element) {
        const rect = element.getBoundingClientRect();
        return (
            rect.top <= (window.innerHeight || document.documentElement.clientHeight) &&
            rect.bottom >= 0
        );
    }

    function checkVisibility() {
        textProposElements.forEach(function(el) {
            if (isInViewport(el)) {
                el.classList.add('visible'); // Ajouter la classe visible quand dans la vue
            } else {
                el.classList.remove('visible'); // Supprimer la classe visible quand hors vue
            }
        });
    }

    window.addEventListener('scroll', checkVisibility);
    checkVisibility(); // V√©rification initiale pour les √©l√©ments visibles d√®s le d√©part
});

</script>
