{% block javascripts %}
  <script>
    document.addEventListener('DOMContentLoaded', function() {
    const progressBars = document.querySelectorAll('.animated-progress');
    const percentTexts = document.querySelectorAll('.progress-percent');

    progressBars.forEach(function(progress, index) {
        const value = progress.getAttribute('value');
        const percentText = percentTexts[index];
        
        setTimeout(function() {
            // Animation de la barre (votre style original)
            progress.style.opacity = '1';
            progress.style.width = '100%';
            
            // Animation du pourcentage
            let current = 0;
            const interval = setInterval(() => {
                if (current >= value) {
                    clearInterval(interval);
                    return;
                }
                current++;
                progress.value = current;
                percentText.textContent = current + '%';
            }, 20);
        }, index * 200); 
    });
});
  </script>
{% endblock %}

